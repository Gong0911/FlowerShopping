@model IEnumerable<FlowerShopping.Models.UserInfo>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("创建新用户", "Create")
</p>
<table class="table"  style="width:1000px;position:absolute;top:150px;left:200px;">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.UserID)*@
            用户编号
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UserName)*@
            用户名
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UserPwd)*@
            用户密码
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UserPhone)*@
            手机号码
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UeserImg)*@
            用户头像
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CreateTime)*@
            注册时间
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPwd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPhone)
            </td>
            <td>
                <img src="@item.UeserImg" style="width:40px;height:40px;border-radius:50%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.UserID }) |
                @Html.ActionLink("删除", "Delete", new { id = item.UserID })
            </td>
        </tr>
    }

</table>